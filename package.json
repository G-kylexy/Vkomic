{
  "name": "vkomic",
  "private": true,
  "version": "1.2.0",
  "main": "electron/main.js",
  "type": "module",
  "description": "Lecteur et téléchargeur de comics VK",
  "author": "G-kylexy",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently -k \"npm run dev\" \"wait-on http://localhost:3000 && npm run electron\"",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.vkomic.app",
    "productName": "vkomic",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "icon": "public/icon.png",
    "win": {
      "target": [
        "nsis",
        "portable",
        "zip"
      ],
      "icon": "public/icon.ico",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "linux": {
      "icon": "public/icon-512.png",
      "target": [
        "AppImage",
        "tar.gz"
      ],
      "category": "Utility"
    },
    "mac": {
      "identity": null,
      "icon": "public/icon.png",
      "target": [
        "zip"
      ],
      "category": "public.app-category.utilities"
    }
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.555.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "electron": "^39.2.4",
    "electron-builder": "^25.1.8",
    "sharp": "^0.34.5",
    "to-ico": "^1.1.5",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^9.0.3"
  }
}