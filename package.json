{
  "name": "vkomic",
  "private": true,
  "version": "1.2.5",
  "main": "electron/main.js",
  "type": "module",
  "description": "Lecteur et téléchargeur de comics VK",
  "author": "G-kylexy",
  "repository": {
    "type": "git",
    "url": "https://github.com/G-kylexy/vkomic.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently -k \"npm run dev\" \"wait-on http://localhost:3000 && npm run electron\"",
    "dist": "npm run build && electron-builder",
    "mobile:start": "npm --prefix mobile run start --",
    "mobile:android": "npm --prefix mobile run android",
    "mobile:web": "npm --prefix mobile run web"
  },
  "build": {
    "appId": "com.vkomic.app",
    "productName": "vkomic",
    "asar": true,
    "compression": "maximum",
    "publish": {
      "provider": "github",
      "owner": "G-kylexy",
      "repo": "vkomic",
      "releaseType": "release"
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "icon": "public/icon.png",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "linux": {
      "icon": "public/icon-512.png",
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    },
    "mac": {
      "icon": "public/icon.png",
      "minimumSystemVersion": "10.13.0",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.utilities"
    }
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.555.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "electron": "^39.2.4",
    "electron-builder": "^25.1.8",
    "postcss": "^8.5.6",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "to-ico": "^1.1.5",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^9.0.3"
  }
}